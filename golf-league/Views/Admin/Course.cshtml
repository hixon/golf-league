@*Page to add/view/modify details to courses that are in the database*@
@model golf_league.ViewModels.CourseAdminViewModel

<label>Course List</label>
@Html.DropDownListFor(c => c.Courses, new SelectList(Model.Courses, "Id", "Name"))

<div id="courseDetails">
    <form asp-action="SaveCourse" asp-controller="Admin" method="post">
        <div class="space-y-12">
            <div class="border-b border-gray-900/10 pb-12">
                <input type="hidden" asp-for="Details.Id" />

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-3">
                        <label asp-for="Details.Name" class="block text-sm font-medium leading-6 text-gray-900">Course Name</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Details.Name" placeholder="Course Name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" sm:leading-6 />
                        </div>
                    </div>
                    <div class="sm:col-span-3">
                        <label asp-for="Details.Tee" class="block text-sm font-medium leading-6 text-gray-900">Tees</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Details.Tee" placeholder="Tee Marker Color" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" sm:leading-6 />
                        </div>
                    </div>
                </div>

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-3">
                        <label asp-for="Details.Rating" class="block text-sm font-medium leading-6 text-gray-900">Course Rating</label>
                        <div class="mt-2">
                            <input type="number" max="99.9" min="0.1" step="0.1" asp-for="Details.Rating" placeholder="0.0" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" sm:leading-6 />
                        </div>
                    </div>
                    <div class="sm:col-span-3">
                        <label asp-for="Details.Slope" class="block text-sm font-medium leading-6 text-gray-900">Course Slope</label>
                        <div class="mt-2">
                            <input type="number" max="199" min="100" step="1" asp-for="Details.Slope" placeholder="99" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" sm:leading-6 />
                        </div>
                    </div>
                </div>

                <button type="submit">Save</button>
            </div>
        </div>
    </form>
</div>