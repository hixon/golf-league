@*Page to add/view/modify details to courses that are in the database*@
@model golf_league.ViewModels.PlayerAdminViewModel

<label>Player List</label>
@Html.DropDownListFor(c => c.Players, new SelectList(Model.Players, "Id", "LastName"))

<div id="playerDetails">
    <form asp-action="SavePlayer" asp-controller="Admin" method="post">
        <div class="space-y-12">
            <div class="border-b border-gray-900/10 pb-12">
                <input type="hidden" asp-for="Details.Id" />

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-3">
                        <label asp-for="Details.FirstName" class="block text-sm font-medium leading-6 text-gray-900">First Name</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Details.FirstName" placeholder="First Name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" sm:leading-6 />
                        </div>
                    </div>
                    <div class="sm:col-span-3">
                        <label asp-for="Details.LastName" class="block text-sm font-medium leading-6 text-gray-900">Last Name</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Details.LastName" placeholder="Last Name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" sm:leading-6 />
                        </div>
                    </div>
                </div>

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-3">
                        <label asp-for="Details.StartIndex" class="block text-sm font-medium leading-6 text-gray-900">Starting Handicap</label>
                        <div class="mt-2">
                            <input type="number" max="99.9" min="0.1" step="0.1" asp-for="Details.StartIndex" placeholder="0.0" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" sm:leading-6 />
                        </div>
                    </div>
                    <div class="sm:col-span-3">
                        <label asp-for="Details.PlayerTypeId" class="block text-sm font-medium leading-6 text-gray-900">Player Type</label>
                        <div class="mt-2">
                            @Html.DropDownListFor(c => c.Details.PlayerTypeId, new SelectList(Model.PlayerTypes, "Id", "Name"))
                        </div>
                    </div>
                </div>

                <button type="submit" class="bg-sky-500 rounded-full text-white font-medium px-4">Save Changes</button>
            </div>
        </div>
    </form>
</div>